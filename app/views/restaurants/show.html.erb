<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <p class="card-text">Address: <%= @restaurant.address %></p>
    <p class="card-text"><small class="text-muted">Category: <%= @restaurant.category %></small></p>
    <%= link_to 'Create a review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
    <%= link_to 'Back to all restaurants', restaurants_path, class: 'btn btn-secondary' %>
  </div>
</div>

<hr>

<% @restaurant.reviews.each do |review| %>
  <h5>Rating: <%= review.rating %></h5>
  <p>Content: <%= review.content %></p>
  <hr>
<% end %>
